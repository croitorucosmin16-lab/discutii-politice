    <script>
        function addOpinion() {
            const name = document.getElementById('name').value.trim();
            const topic = document.getElementById('topic').value;
            const opinion = document.getElementById('opinion').value.trim();

            if (name === '' || opinion === '') {
                alert("Te rugƒÉm completeazƒÉ toate c√¢mpurile.");
                return;
            }

            if (opinion.length < 50) {
                alert("Opinia trebuie sƒÉ aibƒÉ cel pu»õin 50 de caractere.");
                return;
            }

            // CreeazƒÉ postul
            const post = document.createElement('div');
            post.className = 'post';
            const now = new Date();
            const dateStr = now.toLocaleString('ro-RO');

            post.innerHTML = `
                <span class="post-author">${escapeHtml(name)}</span><br>
                ${escapeHtml(opinion)}
                <div class="post-date">Postat ${dateStr}</div>
            `;

            // AdaugƒÉ postul √Æn sec»õiunea corespunzƒÉtoare
            const targetContainer = document.getElementById(`${topic}-posts`);
            targetContainer.prepend(post);

            // ReseteazƒÉ formularul
            document.getElementById('name').value = '';
            document.getElementById('opinion').value = '';

            alert("Mul»õumim pentru contribu»õia ta! Opinia ta a fost adƒÉugatƒÉ.");
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
