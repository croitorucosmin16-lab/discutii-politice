        function addOpinion() {
            const name = document.getElementById('name').value.trim();
            const opinion = document.getElementById('opinion').value.trim();

            if (name === '' || opinion === '') {
                alert("Te rugÄƒm completeazÄƒ toate cÃ¢mpurile.");
                return;
            }

            if (opinion.length < 50) {
                alert("Opinia trebuie sÄƒ aibÄƒ cel puÈ›in 50 de caractere.");
                return;
