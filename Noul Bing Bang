            post.innerHTML = `<strong>${escapeHtml(name)}</strong><br>${escapeHtml(opinion)}`;

            document.getElementById('posts-container').prepend(post);

            // ReseteazÄƒ formularul
            document.getElementById('name').value = '';
            document.getElementById('opinion').value = '';

            alert("MulÈ›umim pentru contribuÈ›ia ta! Opinia ta a fost adÄƒugatÄƒ.");
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
